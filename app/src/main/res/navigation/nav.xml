<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/nav"
    app:startDestination="@id/splashFragment">

    <fragment
        android:id="@+id/splashFragment"
        android:name="com.example.itemdetection.fragment.SplashFragment"
        android:label="fragment_splash"
        tools:layout="@layout/fragment_splash" >
        <action
            android:id="@+id/action_splashFragment_to_selectImageFragment"
            app:destination="@id/selectImageFragment" />
        <action
            android:id="@+id/action_splashFragment_to_selectImageMainFragment"
            app:destination="@id/selectImageMainFragment" />
    </fragment>
    <fragment
        android:id="@+id/selectImageFragment"
        android:name="com.example.itemdetection.fragment.selectImageFragment"
        android:label="fragment_select_image"
        tools:layout="@layout/fragment_select_image" />
    <fragment
        android:id="@+id/selectImageMainFragment"
        android:name="com.example.itemdetection.fragment.selectImageMainFragment"
        android:label="fragment_select_image_main"
        tools:layout="@layout/fragment_select_image_main" />
</navigation>